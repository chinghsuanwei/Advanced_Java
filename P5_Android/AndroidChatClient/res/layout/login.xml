<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true">
    <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="IP" android:id="@+id/idTextView" android:textSize="36sp"></TextView>
    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/ipEditText" android:textSize="36sp">
        <requestFocus></requestFocus>
    </EditText>
    <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="PORT" android:id="@+id/portTextView" android:textSize="36sp"></TextView>
    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/portEditText" android:textSize="36sp"></EditText>
    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center" android:text="OK" android:textSize="36sp" android:id="@+id/okButton"></Button>
</LinearLayout>
